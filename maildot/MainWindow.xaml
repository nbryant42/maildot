<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="maildot.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:maildot"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Mail.NET">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Loaded="OnRootGridLoaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border x:Name="TitleBarRoot"
                Grid.Row="0"
                Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid x:Name="TitleBarDragArea"
                  ColumnSpacing="12"
                  Padding="12,0,12,0"
                  MinHeight="48"
                  VerticalAlignment="Center">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Mail.NET"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Opacity="0.75" />

                <ToggleSwitch Grid.Column="1"
                              x:Name="GpuToggle"
                              VerticalAlignment="Center"
                              IsOn="True"
                              OnContent="GPU"
                              OffContent="CPU"
                              Toggled="OnGpuToggleToggled"
                              ToolTipService.ToolTip="Toggle GPU (DirectML) embeddings" />

                <ComboBox x:Name="SearchModeCombo"
                          Grid.Column="2"
                          Width="140"
                          VerticalAlignment="Center"
                          SelectionChanged="OnSearchModeChanged">
                    <ComboBoxItem Content="Auto" Tag="Auto" IsSelected="True" />
                    <ComboBoxItem Content="Sender" Tag="Sender" />
                    <ComboBoxItem Content="Subject" Tag="Subject" />
                    <ComboBoxItem Content="Content" Tag="Content" />
                    <ComboBoxItem Content="All" Tag="All" />
                </ComboBox>

                <ComboBox x:Name="SearchSinceCombo"
                              Grid.Column="3"
                              Width="150"
                              VerticalAlignment="Center"
                              SelectionChanged="OnSearchSinceChanged">
                    <ComboBoxItem Content="All time" Tag="all" IsSelected="True" />
                    <ComboBoxItem Content="Last 7 days" Tag="7d" />
                    <ComboBoxItem Content="Last 30 days" Tag="30d" />
                    <ComboBoxItem Content="Last 90 days" Tag="90d" />
                    <ComboBoxItem Content="Last year" Tag="365d" />
                </ComboBox>

                <AutoSuggestBox x:Name="SearchBox"
                                Grid.Column="4"
                                PlaceholderText="Search mail"
                                QueryIcon="Find"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                QuerySubmitted="OnSearchQuerySubmitted" />

                <Button x:Name="AdvancedSearchButton"
                        VerticalAlignment="Center"
                        Grid.Column="5"
                        Background="Transparent"
                        BorderThickness="0"
                        ToolTipService.ToolTip="Advanced search"
                        Click="OnAdvancedSearchClicked">
                    <StackPanel Orientation="Vertical" Spacing="2" VerticalAlignment="Center">
                        <Rectangle Height="2" Width="10" Fill="{ThemeResource TextFillColorPrimaryBrush}" RadiusX="1" RadiusY="1" />
                        <Rectangle Height="2" Width="8" Fill="{ThemeResource TextFillColorPrimaryBrush}" RadiusX="1" RadiusY="1" />
                        <Rectangle Height="2" Width="6" Fill="{ThemeResource TextFillColorPrimaryBrush}" RadiusX="1" RadiusY="1" />
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <ContentControl x:Name="RootContent"
                        Grid.Row="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        HorizontalContentAlignment="Stretch"
                        VerticalContentAlignment="Stretch" />
    </Grid>
</Window>
